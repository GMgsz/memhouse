.poetry-creation {
  min-height: 100vh;
  background: #FFF5E7;
}
.poetry-creation .header {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #FFF5E7;
}
.poetry-creation .header .status-bar {
  width: 100%;
  background-color: #FFF5E7;
}
.poetry-creation .header .header-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15px;
}
.poetry-creation .header .header-content .header-left {
  position: relative;
  z-index: 1;
  height: 44px;
  display: flex;
  align-items: center;
}
.poetry-creation .header .header-content .header-center {
  position: absolute;
  left: 0;
  right: 0;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.poetry-creation .header .header-content .header-center .title {
  font-size: 18px;
  font-weight: 600;
  color: #4B5563;
}
.poetry-creation .header .header-content .header-right {
  width: 24px;
}
.poetry-creation .content {
  padding-top: calc(44px + var(--status-bar-height));
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.poetry-creation .content .steps-container {
  margin: 40rpx 0;
}
.poetry-creation .content .steps-container .uni-steps .uni-steps__column-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.poetry-creation .content .steps-container .uni-steps .uni-steps__column-circle {
  width: 44rpx;
  height: 44rpx;
}
.poetry-creation .content .steps-container .uni-steps .uni-steps__column-line {
  background-color: #ddd;
  height: 3px;
}
.poetry-creation .content .steps-container .uni-steps .uni-steps__column-circle-active {
  width: 44rpx;
  height: 44rpx;
  background-color: #FF9500;
}
.poetry-creation .step-content {
  margin: 30rpx 0;
}
.poetry-creation .upload-box {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.poetry-creation .upload-box text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}
.poetry-creation .preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}
.poetry-creation .section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx;
}
.poetry-creation .tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.poetry-creation .tag {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  font-size: 28rpx;
  color: #333;
}
.poetry-creation .tag.tag-selected {
  background: #007AFF;
  color: #fff;
}
.poetry-creation .style-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.poetry-creation .style-item {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  font-size: 28rpx;
  color: #333;
}
.poetry-creation .style-item.style-selected {
  background: #007AFF;
  color: #fff;
}
.poetry-creation .analyze-btn,
.poetry-creation .create-btn {
  margin-top: 40rpx;
  width: 100%;
  background: #007AFF;
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.poetry-creation .analyze-btn:disabled,
.poetry-creation .create-btn:disabled {
  background: #ccc;
}
.poetry-creation .poem-display {
  background: rgba(255, 255, 255, 0.8);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin: 30rpx 0;
}
.poetry-creation .poem-text {
  font-size: 32rpx;
  line-height: 1.8;
  white-space: pre-wrap;
}
.poetry-creation .action-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: 30rpx 0;
}
.poetry-creation .action-btn {
  background: #f5f5f5;
  color: #333;
  border-radius: 100rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.poetry-creation .action-btn:active {
  opacity: 0.8;
}
.image-preview-container {
  position: relative;
  width: 100%;
}
.image-preview-container .reupload-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: none;
}
.steps-container {
  margin: 30rpx 0;
  padding: 20rpx;
}
.steps-container .uni-steps .uni-steps__column-title {
  font-size: 28rpx;
  font-weight: 500;
}
.steps-container .uni-steps .uni-steps__column-circle {
  width: 36rpx;
  height: 36rpx;
}
.steps-container .uni-steps .uni-steps__column-line {
  background-color: #ddd;
  height: 4rpx;
}
.steps-container .uni-steps .uni-steps__column-container {
  margin-bottom: 20rpx;
}